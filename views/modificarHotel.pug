extends ./layout/index.pug
block compartircontenido 
    main.container.mt-5 
        h1.text-center.mt-5 #{pagina}
        .row 
            .col-md-12 
                h2.d-block.w-100.text-center Datos Hotel
                if (errores)
                    each error in errores
                        .alert.col.alert-danger.text-center=error.mensaje
            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/guardarHtlM" method="POST")
                        .form-group
                            label(for="nombre") Nombre
                            input#Nombre(type ="text", placeholder ="Introduce el nombre",name ="nombre", class ="form-control", value = nombre)
                        .form-group
                            label(for="direccion") Direccion
                            input#piso(type ="text", placeholder ="Introduce la direcci√≥n",name ="direccion", class ="form-control", value = direccion)
                        .form-group
                            label(for="telefono") Telefono
                            input#piso(type ="text", placeholder ="Introduce el telefono",name ="telefono", class ="form-control", value = telefono)
                        .form-group
                            label(for="correo") Correo
                            input#piso(type ="text", placeholder ="Introduce el correo",name ="correo", class ="form-control", value = correo) 
                            input#id(type ="hidden",name ="id", class ="form-control", value = id)
                        input.btn.btn-success.btn-block(type="submit")